{
    "name": "binary-cats/rbac",
    "description": "Enum-backed RBAC extension of spatie/laravel-permission",
    "keywords": [
        "binary-cats",
        "enum",
        "laravel",
        "rbac"
    ],
    "homepage": "https://github.com/binary-cats/rbac",
    "license": "MIT",
    "authors": [
        {
            "name": "Cyrill N Kalita",
            "email": "cyrill.kalita@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0",
        "lorisleiva/laravel-actions": "^2.8",
        "spatie/laravel-collection-macros": "*",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-permission": "^6.4"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "BinaryCats\\Rbac\\": "src/",
            "BinaryCats\\Rbac\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinaryCats\\Rbac\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-rbac --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BinaryCats\\Rbac\\RbacServiceProvider"
            ],
            "aliases": {
                "Rbac": "BinaryCats\\Rbac\\Facades\\Rbac"
            }
       },
        "branch-alias": {
            "dev-master": "1.x-dev"
       }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
